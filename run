#!/usr/bin/env python3

import os
import os.path

from utils.tools import launch
from utils.common import get_file_path

import argparse


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('--copy', help='copy file or directory')
    args = parser.parse_args()

    if args.copy:
        dest_path = get_file_path(f'volume')
        os.system(f'sudo cp -r {args.copy} {dest_path}')
        # if os.path.exists(dest_path):
        #     shutil.rmtree(dest_path)
        # shutil.copytree(args.copy, dest_path)

    launch()


if __name__ == '__main__':
    main()
